<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <servlet>
        <servlet-name>slinky</servlet-name>
        <servlet-class>wd.controllers.WorthDrinkingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>slinky</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
    
    <security-constraint>
      <web-resource-collection>
        <url-pattern>/admin/*</url-pattern>
      </web-resource-collection>
      <auth-constraint>
        <role-name>admin</role-name>
      </auth-constraint>
    </security-constraint>
</web-app>
